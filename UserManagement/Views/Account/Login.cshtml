<!-- Views/Account/Login.cshtml -->
@model LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-header">
        <i class="fas fa-user-shield"></i>
        <h2>User Management</h2>
    </div>

    <div class="auth-body">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label for="Email">Email Address</label>
                <div class="input-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <input asp-for="Email" class="form-control" placeholder="your.email@example.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <div class="input-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <input asp-for="Password" type="password" id="password" class="form-control" placeholder="••••••••">
                <span class="password-toggle" id="togglePassword">
                    <i class="fas fa-eye"></i>
                </span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i> Sign In
            </button>

            <div class="mt-3 text-center">
                <a asp-action="Register">Create new account</a>
            </div>
        </form>
    </div>

    <div class="auth-footer">
        &copy; @DateTime.Now.Year User Management System
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Password toggle
            $('#togglePassword').click(function () {
                const password = $('#password');
                const type = password.attr('type') === 'password' ? 'text' : 'password';
                password.attr('type', type);
                $(this).find('i').toggleClass('fa-eye fa-eye-slash');
            });
        });
    </script>
}